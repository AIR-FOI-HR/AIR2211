<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/specijalizantSlika"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            android:src="@drawable/person_48px" />

        <TextView
            android:id="@+id/spcijalizantIme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="36dp"
            android:layout_toEndOf="@id/specijalizantSlika"
            android:text="@string/specijalizantImePrezime"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/spcijalizantTrenutniOdjel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spcijalizantIme"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/specijalizantSlika"
            android:text="@string/specijalizantTrenutniOdjel"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/napredakSpecijalizacije"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_below="@id/specijalizantSlika"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:max="100"
            android:progress="40" />

        <TextView
            android:id="@+id/spcecijalizantNapredakRadovi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/napredakSpecijalizacije"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:text="@string/napredakRadovi"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/provjeraZnanja"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_above="@id/zahvat"
            android:layout_alignParentStart="true"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="150dp"
            android:background="@drawable/rounded_corner"
            android:drawableTop="@drawable/ic_outline_personal_injury_24"
            android:elevation="10dp"
            android:text="@string/provjera_znanja"
            android:textSize="12sp" />

        <Button
            android:id="@+id/strucniRad"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_above="@id/kompetencija"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rounded_corner"
            android:drawableTop="@drawable/ic_baseline_library_books_24"
            android:elevation="10dp"
            android:text="@string/strucniRadGumb"
            android:textSize="12sp" />

        <Button
            android:id="@+id/dnevnaAktivnost"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_above="@id/dioSpecijalizacije"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_corner"
            android:drawableTop="@drawable/ic_baseline_pending_actions_24"
            android:elevation="10dp"
            android:text="@string/dnevnaAktivnost"
            android:textSize="12sp" />

        <Button
            android:id="@+id/slucajBolesnika"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_above="@id/zahvat"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/strucniRad"
            android:background="@drawable/rounded_corner"
            android:drawableTop="@drawable/ic_outline_personal_injury_24"
            android:elevation="10dp"
            android:text="@string/slucajBolesnika"
            android:textSize="12sp" />

        <Button
            android:id="@+id/zahvat"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rounded_corner"
            android:drawableTop="@drawable/ic_baseline_library_books_24"
            android:elevation="10dp"
            android:text="@string/zahvat"
            android:textSize="12sp" />

        <Button
            android:id="@+id/kompetencija"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner"
            android:drawableTop="@drawable/ic_baseline_pending_actions_24"
            android:elevation="10dp"
            android:text="@string/kompetencija"
            android:textSize="12sp" />

        <Button
            android:id="@+id/dioSpecijalizacije"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/strucniRad"
            android:background="@drawable/rounded_corner"
            android:drawableTop="@drawable/ic_outline_personal_injury_24"
            android:elevation="10dp"
            android:text="@string/dioSpecijalizacije"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>